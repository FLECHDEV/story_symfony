{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block body %}
	<div class="container min-vh-600">

		<h1 class="text-center">Utilisateurs</h1>

		<table class="table table-striped table-dark col-8 m-auto">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Email</th>
					<th scope="col">Roles</th>
					<th scope="col">Password</th>
					<th scope="col">Firstname</th>
					<th scope="col">Lastname</th>
					<th scope="col">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>
							<a type="button" class="btn btn-success" href="{{ path('app_user_show', {'id': user.id}) }}">Fiche</a>
							<a type="button" class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a type="button" class="btn btn-success btn-lg col-12 m-auto" href="{{ path('app_user_new') }}">Nouveau</a>
		<a type="button" class="btn btn-danger btn-lg col-12 m-auto" href="{{ path('app_main') }}">Retour Storiz</a>
	</div>
{% endblock %}
