{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center">FIche de {{ user.firstname }} {{ user.lastname }}</h1>

    <table class="table table-striped table-dark col-8 m-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-light btn-lg col-8 m-auto" href="{{ path('app_user_index') }}">Retour liste</a>

    <a type="button" class="btn btn-warning btn-lg col-8 m-auto" href="{{ path('app_user_edit', {'id': user.id}) }}">Ã‰diter</a>

    <a type="button" class="btn btn-danger btn-lg col-8 m-auto">{{ include('user/_delete_form.html.twig') }}</a>
    
    <a type="button" class="btn btn-success btn-lg col-8 m-auto" href="{{ path('app_main') }}">Retour Storiz</a>

{% endblock %}
